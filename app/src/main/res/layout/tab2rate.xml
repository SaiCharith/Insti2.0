<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rate1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="115dp"
        android:text="Rate Here"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="127dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar2"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:background="@drawable/rate2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.578"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:padding="5dp"
        android:text="Analysis"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="25dp" />

    <ImageButton
        android:id="@+id/dislikeI"
        android:layout_width="85dp"
        android:layout_height="49dp"
        android:background="@drawable/d1"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        android:layout_marginRight="63dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="63dp" />

    <ImageButton
        android:id="@+id/likeI"
        android:layout_width="85dp"
        android:layout_height="49dp"
        android:text="Button"
        android:alpha="0.5"

        android:background="@drawable/l1"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="63dp" />

    <!--<android.support.constraint.ConstraintLayout-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:layout_marginRight="8dp"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:layout_marginBottom="200dp"-->
        <!--android:layout_marginStart="30dp"-->
        <!--android:layout_marginEnd="8dp">-->

    <RadioGroup
        android:id="@+id/like_dislike_radio"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="43dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likeI"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/like_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="19dp"
            android:layout_weight="1"
            android:text="like it?"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/likeI" />

        <RadioButton
            android:id="@+id/Dislike_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginTop="19dp"
            android:layout_weight="1"
            android:text="Do not like it?"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dislikeI" />

    </RadioGroup>

    <!--</android.support.constraint.ConstraintLayout>-->

</android.support.constraint.ConstraintLayout>
